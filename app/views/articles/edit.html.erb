<h1>Edit article</h1>


<%= form_for :article,url: article_path(@article), method: :patch do |f| %>

    <%= render :partial=>'new_errors', :locals => { :article => f } %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>