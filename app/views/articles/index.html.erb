<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<%= @articles.inspect %>
<p>
  <%= link_to 'Create', new_article_path %>
</p>
<hr>
<% @articles.each do |item| %>
    <p>
      <strong>Title:</strong>
      <%= item.title %>
    </p>
    <p>
      <strong>Text:</strong>
      <%= item.text %>
    </p>
    <p>
      <strong>Created at:</strong><%= item.created_at %>
      <strong>Updated at:</strong><%= item.updated_at %>
    </p>
    <p>
      <strong>Actions:</strong>
      <span>
        <%= link_to 'Show', article_path(item) %>
        <%= link_to 'Edit', edit_article_path(item) %>
        <%= link_to 'Destroy', article_path(item),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </p>
<% end %>